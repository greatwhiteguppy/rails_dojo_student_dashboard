<h1><%= @dojo.branch %> Dojo</h1>
<% if flash[:success] %>
    <div id="green">
        <p><%= flash[:success] %></p>
    </div>
<% end %>
<h3>Address: <%= @dojo.street %> </h3>
<h3>City: <%= @dojo.city %> State: <%= @dojo.state%> </h3>
<a href="/dojos">Home</a> | <a href="/dojos/<%=@dojo.id%>/edit">Edit</a>
<h1>Student Roster</h1>
<div id="student_table">
    <table>
        <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </thead>
        <tbody>
            <tr>
                <% @students.each do |student| %>
                <td><%= student.first_name%></td>
                <td><%= student.last_name%></td>
                <td><%= student.email%></td>
                <td><a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>">Show </a>| <a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>/edit">Edit</a> | <a href="/dojos/<%=@dojo.id%>/students/<%=student.id%>" data-method="delete">Destroy</a></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<br><a href="/dojos">Home</a>
<span class="link_right"><a href="/dojos/<%=@dojo.id%>/students/new">Add Student</a></span>
