<h1>Editing <%= @student.first_name%> <%= @student.last_name%></h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
<% end %>
<% if flash[:success] %>
    <div id="green">
        <p><%= flash[:success] %></p>
    </div>
<% end %>
<form action ="/dojos/<%=@student.dojo_id%>/students/<%=@student.id%>" method="post">
    <input name="authenticity_token" value="<%=form_authenticity_token%>" type="hidden">
    <input type="hidden" name="_method" value="PUT">
    <h4>First Name: <input type="text" name="student[first_name]" value="<%=@student.first_name%>"/></h4>
    <h4>Last Name: <input type="text" name="student[last_name]" value="<%=@student.last_name%>"/></h4>
    <h4>Email Address: <input type="text" name="student[email]" value="<%=@student.email%>"/></h4>
    <h4>Dojo:<select name="student[dojo_id]">
        <% @dojos.each do |dojo| %>
            <% if dojo == @dojo %>
                <option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
            <% else %>
                <option value="<%= dojo.id %>"><%= dojo.branch %></option>
            <% end %>
        <% end %>
    </select></h4>
    <input type="submit" value="Update"/>
</form>
<br><a href="/dojos">Home</a> | <a href="/dojos/<%=@student.dojo_id%>/students/<%=@student.id%>"><%=@student.first_name%></a>
